post_install() {
  cat <<'EOF'
==> axitools-server installed.

User-level service (recommended):
  $ systemctl --user daemon-reload
  $ systemctl --user enable --now axd
  $ systemctl --user status axd

Create your config and profiles:
  - ~/.config/axq.toml            (see /usr/share/doc/axitools-server/examples/axq.toml)
  - ~/.config/axitools/profiles/  (see /usr/share/doc/axitools-server/examples/profiles)

Quick sanity:
  $ axq status
  $ axq list

EOF
}

post_upgrade() {
  post_install
}
